<body>
  <h1>ðŸ”¥ Plasma Hall of Fame ðŸ”¥</h1>
  <p>Enter your Twitter username to join the wall</p>
  <input type="text" id="username" placeholder="e.g. jack">
  <button onclick="addToWall()">Add</button>

  <div id="wall"></div>

  <script>
    function addToWall() {
      const user = document.getElementById('username').value.trim();
      if (!user) return;
      const img = document.createElement('img');
      img.src = `https://unavatar.io/twitter/${user}`;
      img.className = "pfp";
      document.getElementById('wall').appendChild(img);
      document.getElementById('username').value = "";
    }
  </script>
</body>
